class Solution
{
    public:
    // Function to check if Kth bit is set or not.
    bool checkKthBit(int n, int k)
    {
        if( n & (1 << k)){
            return 1;
        }
        else{
           return 0 ;
        }
    }
};



class Solution
{
    public:
    // Function to check if Kth bit is set or not.
    bool checkKthBit(int n, int k)
    {
      if( (n>>k)&1==1){
          return 1;
      }
      else{
          return 0;
      }
    }
};

